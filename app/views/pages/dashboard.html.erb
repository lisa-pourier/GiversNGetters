<div class="dashboard-container">
<h1>Hi ğŸ˜€ <%= @current_user.username%></h1>

<h3>Submitted Requests</h3>
<div class="submitted-requests">
  <div>
    <%# <p>Pending List</p>
    <p>Accepted List</p>
    <p>Rejected List</p> %>
  <% if current_user.sent_agreements.any?  %>
    <% current_user.sent_agreements.each do |agreement| %>
    <div class="card-white">
    <p><%= agreement.request.title %></p>
     <p><%= agreement.status %></p>
     <% if agreement.receiver %>
     <p>giver: <%= agreement.receiver.username%></p>
     <% else %>
     <%= link_to "Find a Giver", user_path %>
      <% end %>
       </div>
    <% end %>
  <% end %>

</div>
</div>

<h3>Received Requests</h3>
<div class="received-requests">
<div>
    <%# <p>Pending List</p>
    <p>Accepted List</p>
    <p>Rejected List</p> %>
  <% if current_user.received_agreements.any?  %>
    <% current_user.received_agreements.each do |agreement| %>
    <div class="card-white">
    <p><%= agreement.request.title %></p>
     <p>getter: <%= agreement.sender.username%></p>
     <p>request status: <%= agreement.status %></p>
      <%= button_to "ACCEPT", accept_agreement_path(agreement), {class: "btn btn-success"}%>
     <%= button_to "REJECT", reject_agreement_path(agreement), {class: "btn btn-danger"}%>
  </div>
    <% end %>
  <% end %>
</div>

</div>
