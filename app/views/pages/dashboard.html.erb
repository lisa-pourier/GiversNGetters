<div class="dashboard-container">
<h1>Hi ğŸ˜€ <%= @current_user.username%></h1>

<h3>Submitted Requests</h3>
<div class="submitted-requests">
  <div>
    <%# <p>Pending List</p>
    <p>Accepted List</p>
    <p>Rejected List</p> %>
  <% if current_user.sent_agreements.any?  %>
    <% current_user.sent_agreements.each do |agreement| %>
    <div class="card-white">
    <h4><%= agreement.request.title %></h4>
     <% if agreement.receiver %>
     <p><strong>Giver:</strong> <%= agreement.receiver.username%></p>
     <p><strong>request status: </strong><%= agreement.status %></p>
     <% else %>
     <%= link_to "Find a Giver", user_path %>
      <% end %>
       </div>
    <% end %>
  <% end %>

</div>
</div>

<h3>Received Requests</h3>
<div class="received-requests">
<div>
    <%# <p>Pending List</p>
    <p>Accepted List</p>
    <p>Rejected List</p> %>
  <% if current_user.received_agreements.any?  %>
    <% current_user.received_agreements.each do |agreement| %>
    <div class="card-white">
    <h4><%= agreement.request.title %></h4>
     <p><strong>Getter:</strong> <%= agreement.sender.username%></p>
     <p><strong>request status:</strong> <%= agreement.status %></p>
     <div class="buttons">
      <%= button_to "ACCEPT", accept_agreement_path(agreement), {class: "btn btn-success", disabled: agreement.status == 'accepted'}%>
     <%= button_to "REJECT", reject_agreement_path(agreement), {class: "btn btn-danger", disabled: agreement.status == 'rejected'}%>
    </div>
  </div>
    <% end %>
  <% end %>
</div>

</div>
