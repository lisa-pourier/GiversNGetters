<h1>Edit Profile</h1>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :about_me %>
  <%= f.text_area :about_me %>

  <%= f.fields_for :expertises do |expertise| %>
    <%= expertise.label :name %>
    <%= expertise.text_field :name %>
  <% end %>

  <%= f.fields_for :interest_expertises do |interest| %>
    <%= interest.label :name %>
    <%= interest.text_field :name %>
  <% end %>

  <%= f.submit "Update Profile" %>
<% end %>
