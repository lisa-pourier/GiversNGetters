<% @requests.each do |request| %>
  <div class="new-request-form-group">
    <h1>All Requests</h1>
    <h3><%= request.title %></h3>
    <p>User ID: <%= request.user_id %></p>
    <p>Description: <%= request.description %></p>
    <%= link_to 'Back to Home Page', root_path, class: 'secondary-button' %>
  </div>

<% end %>
