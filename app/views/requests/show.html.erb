<div class="centered-header">
  <h3>Request Details</h3>

  <div class="request-form">
    <h5><%= @request.title %></h5>
    <p>Getter: <%= link_to @request.user.username, user_path(@request.user) %></p>
    <p>Description: <%= @request.description %></p>
    <p>Suggestions:</p>
    <% if @experts.empty? %>
      <p>No suggestions..</p>
    <% else %>
      <% @experts.each do |expert| %>
        <p><%= link_to expert.username, user_path(expert) %></p>
      <% end %>
    <% end %>
  </div>

  <div class="request-buttons">
    <%= link_to 'Back to All Requests', requests_path, class: 'secondary-button' %>
    <%= link_to 'My Requests', dashboard_path, class: 'primary-button' %>
  </div>
</div>
